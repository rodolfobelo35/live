    <script type="text/javascript">
        function redirecionarYouTube() {
            var desktopFallback = "https://www.youtube.com/live/Ufd0cYzeaks",
                mobileFallback = "https://www.youtube.com/live/Ufd0cYzeaks",
                app = "youtube://www.youtube.com/live/Ufd0cYzeaks";
            
            if(/Android|iPhone|iPad|iPod/i.test(navigator.userAgent)) {
                window.location = app;
                setTimeout(function() {
                    window.location = mobileFallback;
                }, 25);
            } else {
                window.location = desktopFallback;
            }
        }
    </script>

